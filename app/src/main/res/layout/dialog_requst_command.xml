<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>

    <EditText
        android:id="@+id/edit_text_requst_command_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Requst new Command"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE" />
    <EditText
        android:id="@+id/edit_text_requst_command_activation_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Command Activaction phrase"
        android:layout_marginTop="16dp"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:layout_below="@+id/edit_text_requst_command_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>