<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"

    tools:context="com.ameerhamza6733.okAmeer.assistant.commands.Receivers.CallingActivity">
<RelativeLayout
    android:layout_width="wrap_content"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:text="Make a call" />

    <Spinner
        android:layout_marginTop="35dp"
        android:id="@+id/caling_spinner"


        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/caling_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/caling_spinner"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/cardview_light_background"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageButton
        android:id="@+id/caling_yas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/caling_spinner"
        android:background="@color/cardview_light_background"
        app:srcCompat="@android:drawable/ic_menu_call" />

</RelativeLayout>
</android.support.v7.widget.CardView>
