<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        tools:context="com.ameerhamza6733.okAmeer.assistant.commands.Receivers.CallingActivity"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/making_call_in"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:text="Make a call" />

            <Spinner
                android:id="@+id/caling_spinner"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/making_call_in"
                android:layout_toRightOf="@+id/making_call_in" />

            <ImageButton
                android:id="@+id/caling_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/caling_spinner"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <ImageButton
                android:id="@+id/caling_yas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/making_call_in"
                android:layout_alignRight="@+id/making_call_in"
                android:layout_below="@+id/caling_spinner"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/ic_menu_call" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/febRetry"
        android:layout_height="wrap_content"
        android:src="@drawable/caller_id_mic"
      android:foregroundGravity="bottom"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>